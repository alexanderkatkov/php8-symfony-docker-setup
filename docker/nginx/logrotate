/var/www/app/var/log/nginx/*.log {
    create 0644 nginx adm
    compress
    dateext
    dateformat -%Y-%m-%d
    daily
    delaycompress
    missingok
    notifempty
    rotate 30
    sharedscripts
    postrotate
        if [ -f /var/run/nginx.pid ]; then
            kill -USR1 `cat /var/run/nginx.pid`
        fi
    endscript
}